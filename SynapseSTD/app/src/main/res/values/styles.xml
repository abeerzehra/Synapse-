<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="heading">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#000a40</item>
    </style>
    <style name="hint">
        <item name="android:textColorHint">#787878</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="logoutButton">
        <item name="android:background">#4f0000</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="headingBlack">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="navbar">
        <item name="android:background">@color/darkpurple</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="navbarChannels">
        <item name="android:background">@color/darkpurple</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="navbarMembers">
        <item name="android:background">@color/darkskyblue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="navbarDiscussion">
        <item name="android:background">@color/darkblue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="navbarAddChannel">
        <item name="android:background">@color/purplishPink</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="navbarChat">
        <item name="android:background">@color/maroon</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="navbarRed">
        <item name="android:background">@color/darkred</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="userName">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="message">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>


    <style name="timeStamp">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

</resources>
