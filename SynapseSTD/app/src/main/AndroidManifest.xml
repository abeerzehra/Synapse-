<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.synapse">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_contact_mail_black_24dp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ProfileActivity"></activity>
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".ResetLogin" />
        <activity android:name=".ResetPassword" />
        <activity
            android:name=".PrivateChat"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity android:name=".AddChannelActivity" />
        <activity android:name=".DiscussionActivity" />
        <activity android:name=".MembersActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ChannelsActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".Signup" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>